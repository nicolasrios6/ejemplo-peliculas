@model Pelicula
@{
    ViewData["Title"] = "Detalles de la Película";
    int horas = Model.MinutosDuracion / 60;
    int minutos = Model.MinutosDuracion % 60;
    int anio = Model.FechaLanzamiento.Year;
}

<main class="container my-4">
    <div class="row g-4 g-lg-5">
        <div class="col-lg-4">
            <img alt="@Model.Titulo" class="img-fluid rounded-3 shadow-lg" src="@Model.PosterUrlPortada" />
        </div>
        <div class="col-lg-8">
            <h1 class="display-5 fw-bold">@Model.Titulo</h1>
            <p class="text-muted">@Model.Genero.Descripcion | @horas h @minutos m | @anio</p>
            <p class="lead">@Model.Sinopsis</p>
            <div class="card bg-light border p-4 my-4">
                <div class="row align-items-center">
                    <div class="col-sm-4 text-center text-sm-start">
                        <p class="display-2 fw-bolder text-dark mb-0">4.5</p>
                        <div class="text-primary">
                            <span class="material-symbols-outlined">star</span>
                            <span class="material-symbols-outlined">star</span>
                            <span class="material-symbols-outlined">star</span>
                            <span class="material-symbols-outlined">star</span>
                            <span class="material-symbols-outlined">star_half</span>
                        </div>
                        <p class="text-muted mb-0">125 reviews</p>
                    </div>
                    <div class="col-sm-8 mt-3 mt-sm-0">
                        <div class="row align-items-center gx-2 gy-1">
                            <div class="col-1 text-end text-dark fw-medium">5</div>
                            <div class="col-9">
                                <div class="progress" style="height: 8px;">
                                    <div aria-valuemax="100" aria-valuemin="0" aria-valuenow="40" class="progress-bar" role="progressbar" style="width: 40%"></div>
                                </div>
                            </div>
                            <div class="col-2 text-muted text-end">40%</div>
                            <div class="col-1 text-end text-dark fw-medium">4</div>
                            <div class="col-9">
                                <div class="progress" style="height: 8px;">
                                    <div aria-valuemax="100" aria-valuemin="0" aria-valuenow="30" class="progress-bar" role="progressbar" style="width: 30%"></div>
                                </div>
                            </div>
                            <div class="col-2 text-muted text-end">30%</div>
                            <div class="col-1 text-end text-dark fw-medium">3</div>
                            <div class="col-9">
                                <div class="progress" style="height: 8px;">
                                    <div aria-valuemax="100" aria-valuemin="0" aria-valuenow="15" class="progress-bar" role="progressbar" style="width: 15%"></div>
                                </div>
                            </div>
                            <div class="col-2 text-muted text-end">15%</div>
                            <div class="col-1 text-end text-dark fw-medium">2</div>
                            <div class="col-9">
                                <div class="progress" style="height: 8px;">
                                    <div aria-valuemax="100" aria-valuemin="0" aria-valuenow="10" class="progress-bar" role="progressbar" style="width: 10%"></div>
                                </div>
                            </div>
                            <div class="col-2 text-muted text-end">10%</div>
                            <div class="col-1 text-end text-dark fw-medium">1</div>
                            <div class="col-9">
                                <div class="progress" style="height: 8px;">
                                    <div aria-valuemax="100" aria-valuemin="0" aria-valuenow="5" class="progress-bar" role="progressbar" style="width: 5%"></div>
                                </div>
                            </div>
                            <div class="col-2 text-muted text-end">5%</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-grid gap-3 d-sm-flex my-4">
                <button class="btn btn-primary btn-lg d-flex align-items-center justify-content-center gap-2" type="button">
                    <span class="material-symbols-outlined">auto_awesome</span>
                    <span>Generar Resumen de Review</span>
                </button>
                <button class="btn btn-secondary btn-lg d-flex align-items-center justify-content-center gap-2" type="button">
                    <span class="material-symbols-outlined">movie</span>
                    <span>Películas Similares</span>
                </button>
            </div>
            <div class="mt-5">
                <h2 class="h3 fw-bold mb-4">Reviews</h2>
                <div class="list-group">
                    <div class="list-group-item bg-dark text-light border-secondary review-card p-4 mb-3">
                        <div class="d-flex align-items-center mb-3">
                            <img alt="Sofía García" class="rounded-circle me-3" height="40" src="https://lh3.googleusercontent.com/aida-public/AB6AXuAR6_O8JX0iIjBUfhUL6_Xdu0UyFJFvXl6oVvGhNpge658PMcgtIO7Z25bYN7mNVPPbgtKo_yho4ijTcH4eTUoqvR4kTaC6A7hipopyrj3PJzTYJl_trxUItHGvbozdNwvUKPOQT5ekPT6od2HFR1mCiWDFj3AsZ8lbp3fPTqPTeJyQOH9IdJVCMXhfBN9joBXxJ70lhIIi-l64Ai4Vla1W6wML4UTwg5iA02gAVxYF5zh0AyCxN4CE6ftxRAzhedQImyf6XLsut7k" width="40" />
                            <div>
                                <h5 class="mb-0 text-light">Sofía García</h5>
                                <small class="text-muted">2024-07-15</small>
                            </div>
                        </div>
                        <div class="text-primary mb-2">
                            <span class="material-symbols-outlined">star</span><span class="material-symbols-outlined">star</span><span class="material-symbols-outlined">star</span><span class="material-symbols-outlined">star</span><span class="material-symbols-outlined">star</span>
                        </div>
                        <p class="mb-3">Una película fascinante con una historia cautivadora y personajes memorables. Los efectos visuales son impresionantes y la banda sonora complementa perfectamente la narrativa.</p>
                        <div class="d-flex gap-4 text-muted">
                            <button class="btn btn-sm btn-link text-muted text-decoration-none d-flex align-items-center gap-2 p-0">
                                <span class="material-symbols-outlined fs-5">thumb_up</span>
                                <span>50</span>
                            </button>
                            <button class="btn btn-sm btn-link text-muted text-decoration-none d-flex align-items-center gap-2 p-0">
                                <span class="material-symbols-outlined fs-5">thumb_down</span>
                                <span>10</span>
                            </button>
                        </div>
                    </div>
                    <div class="list-group-item bg-dark text-light border-secondary review-card p-4 mb-3">
                        <div class="d-flex align-items-center mb-3">
                            <img alt="Carlos López" class="rounded-circle me-3" height="40" src="https://lh3.googleusercontent.com/aida-public/AB6AXuBrpf1pNt9rUe15bHgfoiem5gkWXEBGSvr1UyTpIdExrE6TTXZg_s3xLLZXIbzCQotzs-VKCozc8JRXmerNl6QEZ-diagIc1D2ywr3dxjfeKxm9RCxStDFHfWzy1RxmWNkzkhXb-V5hWpa0WzPJvoPXOcoR3NUoO8GmyEcgTC72XAWJDx2UnBni9P_KrNpDRfqyU6oEaIc_mjmCtyCWhJJqtwSM-jX0dMranqfgGlX3RP2aqTTFUfQiMxATAxTNExbof3-Q9ZjHkko" width="40" />
                            <div>
                                <h5 class="mb-0 text-light">Carlos López</h5>
                                <small class="text-muted">2024-07-10</small>
                            </div>
                        </div>
                        <div class="text-primary mb-2">
                            <span class="material-symbols-outlined">star</span><span class="material-symbols-outlined">star</span><span class="material-symbols-outlined">star</span><span class="material-symbols-outlined">star</span>
                            <span class="material-symbols-outlined text-secondary">star_border</span>
                        </div>
                        <p class="mb-3">Disfruté mucho de la película, aunque el ritmo podría haber sido un poco más ágil en algunas partes. En general, es una experiencia cinematográfica muy recomendable.</p>
                        <div class="d-flex gap-4 text-muted">
                            <button class="btn btn-sm btn-link text-muted text-decoration-none d-flex align-items-center gap-2 p-0">
                                <span class="material-symbols-outlined fs-5">thumb_up</span>
                                <span>30</span>
                            </button>
                            <button class="btn btn-sm btn-link text-muted text-decoration-none d-flex align-items-center gap-2 p-0">
                                <span class="material-symbols-outlined fs-5">thumb_down</span>
                                <span>5</span>
                            </button>
                        </div>
                    </div>
                    <div class="list-group-item bg-dark text-light border-secondary review-card p-4">
                        <div class="d-flex align-items-center mb-3">
                            <img alt="Ana Martínez" class="rounded-circle me-3" height="40" src="https://lh3.googleusercontent.com/aida-public/AB6AXuA7Bi7_UR1ltLu3h_T2AmeDQ3As7Cdz027g8NSnaTjjcDF6wzSzd5NS04tCEmYmuueO7z58Jj2fZUMy5Od6id5ZS3hZReuxah0647NCbEYupPFqJyFHSBqN15ZRbMG8BlIceORGztTbhX1ioWUbEL_v7cJvwOU1h2Ops3pJO-ry4YhqclVnRpcYiKQkCkH8Rzog1B1TiK7N4Tub_ESqJ7vMDfKsB7L_VRLh6LaOI6ZU8-6zDGyotHq2c_G1Ja_BMurUN2QqiryqYsg" width="40" />
                            <div>
                                <h5 class="mb-0 text-light">Ana Martínez</h5>
                                <small class="text-muted">2024-07-05</small>
                            </div>
                        </div>
                        <div class="text-primary mb-2">
                            <span class="material-symbols-outlined">star</span><span class="material-symbols-outlined">star</span><span class="material-symbols-outlined">star</span>
                            <span class="material-symbols-outlined text-secondary">star_border</span><span class="material-symbols-outlined text-secondary">star_border</span>
                        </div>
                        <p class="mb-3">La película tiene algunos momentos interesantes, pero la trama se vuelve predecible hacia el final. Las actuaciones son sólidas, pero no sobresalientes.</p>
                        <div class="d-flex gap-4 text-muted">
                            <button class="btn btn-sm btn-link text-muted text-decoration-none d-flex align-items-center gap-2 p-0">
                                <span class="material-symbols-outlined fs-5">thumb_up</span>
                                <span>20</span>
                            </button>
                            <button class="btn btn-sm btn-link text-muted text-decoration-none d-flex align-items-center gap-2 p-0">
                                <span class="material-symbols-outlined fs-5">thumb_down</span>
                                <span>15</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
